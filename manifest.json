

  {
    "manifest_version": 3,
    "name": "Amazon Product Info",
    "version": "1.0",
    "description": "Muestra informaci√≥n relevante del producto en Amazon.",
    "permissions": ["activeTab", "scripting", "storage"],
    "icons": {
      "16": "icons/pomodoro_icon_16.png",
      "48": "icons/pomodoro_icon_48.png",
      "128": "icons/pomodoro_icon_128.png"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.amazon.com/*"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["content.js","styles.css"],
        "matches": ["https://www.amazon.com/*"]
      }
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }
  

